<%= render 'shared/navbar' %>
<div class="container789">
  <h1 class="haris456">Liste des évènements proposés</h1>
  <%= @user_events.first.title unless @user_events.nil? %>
  <h3 class="haris500">Filtrer par évènement</h3>

  <%= form_with url: user_events_path, class:'haris423', method: :get, local: true do |f| %>
    <%= f.select :category, options_from_collection_for_select(Event.select(:category).distinct, :category, :category), {}, :class => 'haris900' %>
    <%= f.submit :Filtrer, class:'btnberomantic' %>
  <% end %>

  <p class="haris18">Nombre de résultats trouvés : <%= @results.length %></p>
</div>

<% @results.each do |event| %>
  <div class="container56">
    <div class="card-product">
      <div class="image16">
        <img src="<%= event.photo_url %>" alt="<%= event.title %>" width="120" height="120">
      </div>
      <div class="card-product-infos">
        <h2 class="titre13"><%= event.title %></h2>
        <p class="text13"><%= event.description %></p>
        <ul class="info14">
          <li>Date : <%= event.start_date %> </li>
          <li>Catégorie : <%= event.category  %></li>
          <li>Adresse : <%= event.address %> </li>
          <div class="reserver29">
            <a href="<%= event.link_url %>" class="reserver10, btnberomantic">Réserver</a>
          </div>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<%= render '/pages/footer' %>
