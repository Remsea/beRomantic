<div id="dates">
  <ul>
    <% current_user.key_dates.each do |date| %>
      <li data-keydateid ="<%=date.id%>" class="mini-card">
        <%= date.date%>, <%= date.description %>
        <%= link_to date, method: :delete, remote: true do %>
          <i class="fas fa-times cross" style="color: #ffffff;"></i></li>
        <% end %>
    <% end %>
  </ul>
</div>
