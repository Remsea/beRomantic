<h1>partenaire informations</h1>
<p><%= @partenaires.first.firstname unless @partenaires.nil? %></p>


<p>choisir un interet et l'ajouter</p>
<%= form_with url: partenaire_interests_path, method: :post, remote: false do |f| %>
  <%= f.select(:interest_id, options_from_collection_for_select(Interest.where(genre: "Centre d'intérêt"), :id, :title)) %>
<%= f.submit :ajouter %>
<% end %>

<p>visualiser les interets choisis</p>

<div id="interets" >
  <%= render 'interet' %>
</div>

