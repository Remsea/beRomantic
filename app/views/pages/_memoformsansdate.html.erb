<div class="maincard memoform cache hide">
  <div class="d-flex">
  <i class="fas fa-plus-square mr-3" id="plusmemo"></i><h2>Annoter ses remarques ▼</h2>
</div>
<div class="d-flex">
  <h3 class="flex-grow-1 text-right">... et ajouter un rappel ▼</h3>
  </div>
  <div class="card text-center mw-50">
    <div class="card-body p-1">
      <div id="memo">
        <%= form_with url: memos_path, method: :post, class: "form-inline text-center mb-2" do |f| %>
          <%= f.text_field :content, class: "form-control mr-1 w-75" %>
          <%= f.submit :Ajouter, class: "btnberomantic" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
